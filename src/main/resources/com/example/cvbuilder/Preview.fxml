<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="700" prefWidth="800" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cvbuilder.controller.PreviewController">

    <!-- Title -->
    <Label layoutX="268.0" layoutY="20" prefHeight="40.0" prefWidth="236.0" styleClass="title-label" text="Currliculum Vitae" />

    <!-- Full Name -->
    <Label layoutX="40" layoutY="80" styleClass="field-label" text="Full Name:" />
    <Label fx:id="nameLabel" layoutX="200" layoutY="80" styleClass="data-label" />

    <!-- Email -->
    <Label layoutX="40" layoutY="120" styleClass="field-label" text="Email Address:" />
    <Label fx:id="emailLabel" layoutX="200" layoutY="120" styleClass="data-label" />

    <!-- Phone -->
    <Label layoutX="40" layoutY="160" styleClass="field-label" text="Phone Number:" />
    <Label fx:id="phoneLabel" layoutX="200" layoutY="160" styleClass="data-label" />

    <!-- Address -->
    <Label layoutX="40" layoutY="200" styleClass="field-label" text="Address:" />
    <Label fx:id="addressLabel" layoutX="200" layoutY="200" styleClass="data-label" />

    <!-- Education Section -->
    <Label layoutX="40" layoutY="240" styleClass="field-label" text="Educational Qualifications:" />
    <TextArea fx:id="educationText" editable="false" layoutX="40" layoutY="265" prefHeight="80" prefWidth="720" styleClass="preview-area" />

    <!-- Skills Section -->
    <Label layoutX="40" layoutY="360" styleClass="field-label" text="Skills:" />
    <TextArea fx:id="skillsText" editable="false" layoutX="40" layoutY="385" prefHeight="70" prefWidth="720" styleClass="preview-area" />

    <!-- Experience Section -->
    <Label layoutX="40" layoutY="470" styleClass="field-label" text="Work Experience:" />
    <TextArea fx:id="experienceText" editable="false" layoutX="40" layoutY="495" prefHeight="70" prefWidth="720" styleClass="preview-area" />

    <!-- Projects Section -->
    <Label layoutX="40" layoutY="580" styleClass="field-label" text="Projects:" />
    <TextArea fx:id="projectsText" editable="false" layoutX="40" layoutY="605" prefHeight="80" prefWidth="720" styleClass="preview-area" />

</AnchorPane>

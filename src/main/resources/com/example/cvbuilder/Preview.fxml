<AnchorPane prefHeight="700" prefWidth="800"
            stylesheets="@styles.css"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.cvbuilder.controller.PreviewController">

    <Label layoutX="320" layoutY="20" styleClass="title" text="CV Preview"/>

    <Button text="â† Back"
            layoutX="20" layoutY="20"
            onAction="#goBack"
            styleClass="back-button"/>


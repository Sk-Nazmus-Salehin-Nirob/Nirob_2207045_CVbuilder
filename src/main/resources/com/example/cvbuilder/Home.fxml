<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.cvbuilder.controller.HomeController"
            prefWidth="600" prefHeight="400">

    <!-- Main Title -->
    <Text text="CV Builder"
          layoutX="240" layoutY="80"
          style="-fx-font-size: 32px;" />

    <!-- New Subtitle -->
    <Text text="Build your CV and enlighten your Career!!!"
          layoutX="160" layoutY="120"
          style="-fx-font-size: 18px; -fx-fill: #444;" />

    <!-- Button -->
    <Button text="Create CV"
            layoutX="240" layoutY="200"
            prefWidth="120"
            onAction="#gotoForm" />

</AnchorPane>
